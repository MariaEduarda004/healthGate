<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rotas - Health Gate</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>

<%- include('partials/navbar') %>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Rotas Cadastradas</h2>
    <a href="/routes/new" class="btn btn-primary">Cadastrar Nova Rota</a>
  </div>

  <% ["FASS_ECG", "IF_CLOUD", "neoFassEcg"].forEach(project => { %>
    <h5><%= project %></h5>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Projeto</th>
          <th>Source Path</th>
          <th>Target URL</th>
          <th>Método</th>
          <th>Descrição</th>
        </tr>
      </thead>
      <tbody>
        <% routes.filter(route => route.nameProject === project).forEach(route => { %>
          <tr>
            <td><%= route.nameProject %></td>
            <td><%= route.sourcePath %></td>
            <td><%= route.targetUrl %></td>
            <td><%= route.method %></td>
            <td><%= route.description %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% }) %>

</div>
</body>
</html>
