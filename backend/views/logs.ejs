<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Logs - Health Gate</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>

<%- include('partials/navbar') %>

<div class="container mt-4">
  <h2 class="mb-4">Logs de Requisições</h2>

  <div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Data/Hora</th>
          <th>Método</th>
          <th>Path</th>
          <th>Status</th>
          <th>Projeto</th>
          <th>Detalhes</th>
        </tr>
      </thead>
      <tbody>
        <% if (logs.length > 0) { %>
          <% logs.forEach(log => { %>
            <tr>
              <td><%= new Date(log.timestamp).toLocaleString('pt-BR') %></td>
              <td><span class="badge bg-info text-dark"><%= log.method %></span></td>
              <td><%= log.path %></td>
              <td>
                <% if (log.statusCode >= 200 && log.statusCode < 300) { %>
                  <span class="badge bg-success"><%= log.statusCode %></span>
                <% } else if (log.statusCode >= 400 && log.statusCode < 500) { %>
                  <span class="badge bg-warning text-dark"><%= log.statusCode %></span>
                <% } else { %>
                  <span class="badge bg-danger"><%= log.statusCode %></span>
                <% } %>
              </td>
              <td><%= log.projectName %></td>
              <td>
                <button class="btn btn-sm btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#details-<%= log._id %>">
                  Ver
                </button>
              </td>
            </tr>
            <tr class="collapse" id="details-<%= log._id %>">
              <td colspan="6">
                <strong>Headers:</strong>
                <pre><%= JSON.stringify(log.headers, null, 2) %></pre>
                <strong>Body:</strong>
                <pre><%= JSON.stringify(log.body, null, 2) %></pre>
                <strong>Query:</strong>
                <pre><%= JSON.stringify(log.query, null, 2) %></pre>
                <strong>Resposta:</strong>
                <pre><%= JSON.stringify(log.responseBody, null, 2) %></pre>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr><td colspan="6" class="text-center">Nenhum log encontrado.</td></tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
</body>
</html>
